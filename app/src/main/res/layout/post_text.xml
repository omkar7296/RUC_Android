<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/post_text_cardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:contentPadding="5dp"
    app:cardElevation="10dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:id="@+id/post_text_profile_pic"
                android:padding="3dp"
                android:src="@drawable/jamesharden"

                />

            <LinearLayout
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Omkar Sawant"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:id="@+id/post_text_name" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pittsburgh, Pennsylvania"
                    android:layout_marginTop="3dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:id="@+id/post_text_location" />


            </LinearLayout>


        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/post_text_desc"
            android:text="Here the description of the post is displayed."
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:textColor="#000000"
            android:textSize="16sp"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/post_text_like"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/like"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp" />

            <ImageView
                android:id="@+id/post_text_dislike"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/dislike"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/post_text_comments_view"
            android:text="view and add comments"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@color/colorPrimaryDark"

            />


    </LinearLayout>

</android.support.v7.widget.CardView>